<header class="yo-header m-header">
            <h2 class="title">新增预约</h2>
            <a class="regret yo-ico js-back"><span class="icon icon-arrow-left-blue"></span></a>
            <a class="js-submit affirm js-addorder">保存</a>
        </header>
        <div class="m-med-form flex g-main">
            <div class="form-block">
                <input type="hidden" name="doctor-id" value=""/>
                <input type="hidden" name="patient-id" value=""/>
                <div class="form-col g-clear">
                    <div class="item-title label">患者姓名</div>
                    <a class="item-input js-getPatient" href="javascript:;">
                        <span class="icon icon-arrow-right-gray"></span>
                        <input type="text" name="name" class="patientName" placeholder="请填写患者姓名(必填)" value="{{xm}}" required="required" readonly/>
                    </a>
                </div>
                <div class="form-col g-clear">
                    <div class="item-title label">患者手机号</div>
                    <div class="item-input">
                        <span class="icon icon-arrow-right-gray"></span>
                        <input type="tel" name="phone" class="patientPhone" placeholder="请填写患者电话(必填)" value="{{sjh}}"/>
                    </div>
                </div>
                <div class="form-col g-clear">
                    <div class="item-title label">患者性别</div>
                    <div class="item-input js-sex">
                        <span class="icon icon-arrow-right-gray"></span>
                        <input type="text" name="sexVal" class="sexVal" placeholder="请选择性别(必填)" value="{{xb}}" readonly/>
                    </div>
                </div>
                <div class="form-col g-clear last">
                    <div class="item-title label">患者年龄</div>
                    <div class="item-input js-patientAge">
                        <span class="icon icon-arrow-right-gray"></span>
                        <input type="text" name="ageVal" class="ageVal" placeholder="请选择年龄(必填)" value="{{age}}" readonly/>
                    </div>
                </div>

            </div>
                <div class="form-col g-clear">
                    <div class="item-title label">预约医生</div>
                    <div class="item-input">
                        <span class="icon icon-arrow-right-gray"></span>
                        <input type="text" data-val="1" name="doctor-name" placeholder="请选择医生(必填)" class="doctorName" required="required" readonly/>
                    </div>
                </div>
                <div class="form-col g-clear">
                    <div class="item-title label">预约日期</div>
                    <div class="item-input js-yuyuetime">
                        <span class="icon icon-arrow-right-gray"></span>
                        <input type="text" name="yuyueDate" id="yuyueDate" placeholder="请选择日期(必填)" required="required" readonly/>
                    </div>
                </div>
                <div class="form-col g-clear">
                    <div class="item-title label">预约时间</div>
                    <div class="item-input">
                        <span class="icon icon-arrow-right-gray"></span>
                        <input type="text" name="showTime" id="showTime" placeholder="请选择时间(必填)" value="">
                        <input type="time" name="yuyuetime" id="yuyueTime"  value="" required="required" readonly/>
                    </div>
                </div>
                <div class="form-col g-clear">
                    <div class="item-title label">预约时长</div>
                    <div class="item-input js-timeRange">
                        <span class="icon icon-arrow-right-gray"></span>
                        <span  class="timeRangeVal" data-val="0.5">30分钟</span>
                    </div>
                </div>
                <div class="form-col g-clear last">
                    <div class="item-title label">预约事项</div>
                    <a class="add-matter btn-text-right" href="javascript:;">添加</a>
                    <div class="item-input">
                         <p class="noticeMsg">请选择就诊事项(必填)</p>
                    </div>
                    <ul class="matter-list"></ul>
                </div>
        </div>
